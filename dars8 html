    <script>
        (function() {
            const words = document.querySelectorAll('.sp-word');
            const popup = document.getElementById('popup');
            const popupMainWord = document.getElementById('popup-main-word');
            const popupTranslation = document.getElementById('popup-translation');
            const speakBtn = document.getElementById('speak-btn');
            let textToSpeak = "";

            function hidePopup() {
                popup.classList.remove('show');
                setTimeout(() => {
                    if (!popup.classList.contains('show')) {
                        popup.style.display = 'none';
                    }
                }, 200);
            }

            words.forEach(word => {
                word.addEventListener('click', (e) => {
                    e.stopPropagation();
                    
                    const rect = word.getBoundingClientRect();
                    // So'zni tozalash (tinish belgilarini olib tashlash)
                    textToSpeak = word.innerText.replace(/[.,\/#!$%\^&\*;:{}=\-_`~()]/g,"").trim();
                    const translation = word.getAttribute('data-tr');

                    popupMainWord.innerText = textToSpeak;
                    popupTranslation.innerText = translation;

                    popup.style.display = 'flex';
                    
                    // Pozitsiyani hisoblash
                    let left = rect.left + window.scrollX + (rect.width / 2) - (popup.offsetWidth / 2);
                    let top = rect.top + window.scrollY - popup.offsetHeight - 15;

                    // Chegaralarni tekshirish
                    if (left < 10) left = 10;
                    if (left + popup.offsetWidth > window.innerWidth - 10) {
                        left = window.innerWidth - popup.offsetWidth - 10;
                    }
                    
                    if (top < window.scrollY + 10) {
                        top = rect.bottom + window.scrollY + 15;
                    }

                    popup.style.left = Math.round(left) + 'px';
                    popup.style.top = Math.round(top) + 'px';

                    // Animation for showing
                    requestAnimationFrame(() => {
                        popup.classList.add('show');
                    });
                });
            });

            speakBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                if (textToSpeak) {
                    try {
                        const utterance = new SpeechSynthesisUtterance(textToSpeak);
                        utterance.lang = 'es-ES';
                        utterance.rate = 0.8;
                        // Cancel any ongoing speech
                        window.speechSynthesis.cancel();
                        window.speechSynthesis.speak(utterance);
                    } catch (error) {
                        console.log('Ovozli sintezda xatolik');
                    }
                }
            });

            document.addEventListener('click', (e) => {
                if (!popup.contains(e.target)) {
                    hidePopup();
                }
            });

            window.addEventListener('scroll', hidePopup);
            window.addEventListener('resize', hidePopup);
            
            // Popup ichida bosilganda yopilmasligi uchun
            popup.addEventListener('click', (e) => {
                e.stopPropagation();
            });
        })();
    </script>
</body>
